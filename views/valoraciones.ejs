<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/stylesheets/slidebar.css">
    <link rel="stylesheet" href="/stylesheets/valoraciones.css">
    <title>Valoraciones - Campus Swap</title>
    <script src="/javascript/scriptList.js" defer></script>
</head>
<body>
<div class="container">
    <div class="sidebar">
        <div class="perfil">
            <img src="../images/perfil.jpg" alt="Foto de perfil" class="profile-img">
            <h2>Usuario</h2>
            <p>★★★★</p>
            <p>Año</p>
        </div>
        <nav>
            <ul>
                <li><a href="/perfil">Productos</a></li>
                <li><a href="/buzon">Buzón</a></li>
                <li><a href="/favoritos">Favoritos</a></li>
                <li><a href="/valoraciones">Valoraciones</a></li>
                <li><a href="/modificar">Cambiar contraseña</a></li>
            </ul>
        </nav>
        <div class="settings">
            <img src="../images/settings-icon.svg" alt="Configuración">
        </div>
    </div>

    <div class="main-content">
        <header>
            <h2>Valoraciones</h2>
        </header>

        <div class="filtros">
            <button onclick="cargarValoraciones('comprado')">Comprado</button>
            <button onclick="cargarValoraciones('vendido')">Vendido</button>
        </div>

        <div class="mensaje"></div>

      
        <div class="valoraciones-list">
            <!-- Las valoraciones dinámicas aparecerán aquí -->
        </div>
    </div>
</div>
<script>
    document.addEventListener('DOMContentLoaded', () => cargarValoraciones('comprado'));
</script>
</body>
</html>